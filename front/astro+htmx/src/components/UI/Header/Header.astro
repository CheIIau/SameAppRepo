---
const links = [
    { name: 'Home', link: '/' },
    { name: 'Posts', link: '/posts/1' },
    { name: 'About', link: '/about' },
    { name: 'Todos', link: '/todos' },
] as const
const currentUrl = Astro.url.pathname
---

<header class="header">
    <nav class="w-full flex justify-center">
        <svg
            viewBox="0 0 2 3"
            class="svg text-indigo-800"
            aria-hidden="true"
        >
            <path
                class="fill-current"
                d="M0,0 L1,2 C1.5,3 1.5,3 2,3 L2,0 Z"
            ></path>
        </svg>
        <ul class="bg-indigo-800 flex justify-center items-center [&>li]:relative [&>li]:h-full">
            {
                links.map((link) => (
                    <li>
                        <a
                            href={link.link}
                            class:list={['link ', currentUrl === link.link ? '!text-amber-600' : 'text-slate-400']}
                        >
                            {link.name}
                        </a>
                    </li>
                ))
            }
        </ul>
        <svg
            viewBox="0 0 2 3"
            class="svg text-indigo-800"
            aria-hidden="true"
        >
            <path
                class="fill-current"
                d="M0,0 L0,3 C0.5,3 0.5,3 1,2 L2,0 Z"
            ></path>
        </svg>
    </nav>
</header>

<style>
    .header {
        display: flex;
        justify-content: space-between;
    }

    .svg {
        width: 2em;
        height: 3em;
        display: block;
    }

    .link {
        display: flex;
        height: 100%;
        align-items: center;
        padding: 0 0.5rem;
        font-weight: 700;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        text-decoration: none;
        transition: color 0.2s linear;
    }

    .link:hover {
        color: #7fc1ff;
    }
</style>
