---
import { type Todo } from '../../../types/todos'
import TodoItem from '../TodoItem/TodoItem.astro'
interface Props {
    className: string
    todos: Todo[]
}
const { todos, className } = Astro.props
---

<ul
    id="todo-list"
    class:list={['flex flex-col flex-grow gap-2 ', className]}
>
    {todos.map((todo) => <TodoItem todo={todo} />)}
</ul>
